# Fight Health Insurance - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
# Configuration class to use (Dev, TestSync, Test, TestActor, Prod)
DJANGO_CONFIGURATION=Dev
DJANGO_SETTINGS_MODULE=fighthealthinsurance.settings

# Required for production - MUST be set and kept secret
SECRET_KEY=your-secret-key-here

# =============================================================================
# DATABASE (Production)
# =============================================================================
# PostgreSQL (primary database for production)
PDBNAME=fighthealthinsurance
PDBUSER=your-db-user
PDBPASSWORD=your-db-password
PDBHOST=localhost

# MySQL (optional secondary database)
DBNAME=fighthealthinsurance_mysql
DBUSER=your-mysql-user
DBPASSWORD=your-mysql-password
DBHOST=localhost

# Development SQLite location (optional)
DEV_DB_LOC=db.sqlite3

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Test keys (for development)
STRIPE_TEST_SECRET_KEY=sk_test_...
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_...

# Live keys (for production - set in Prod config)
STRIPE_LIVE_SECRET_KEY=sk_live_...
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_...

# Webhook secret for Stripe events
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# RECAPTCHA (Anti-spam protection)
# =============================================================================
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# Set to "True" to bypass reCAPTCHA validation in development
RECAPTCHA_TESTING=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.your-provider.com
EMAIL_HOST_PORT=587
EMAIL_HOST_USER=your-email-user
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# MINIO / S3 OBJECT STORAGE (Production)
# =============================================================================
EX_MINIO_ACCESS=your-access-key
EX_MINIO_SECRET=your-secret-key
EX_MINIO_REGION=us-east-1
EX_MINIO_HOST_ENDPOINT=minio.your-domain.com
EX_MINIO_BUCKET=fhi-media
EX_MINIO_USE_HTTPS=True
EX_MINIO_CERT_CHECK=True

# =============================================================================
# ENCRYPTION (for sensitive field encryption)
# =============================================================================
DEFF_SALT=your-encryption-salt
DEFF_PASSWORD=your-encryption-password

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry error tracking (optional)
SENTRY_ENDPOINT=https://xxxxx@sentry.io/xxxxx

# Enable audit logging for compliance
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# ML/AI BACKENDS (Optional - for enhanced appeal generation)
# =============================================================================
# OctoAI API token for cloud ML
OCTOAI_TOKEN=your-octoai-token

# Local ML backend (if using self-hosted models)
HEALTH_BACKEND_HOST=localhost
HEALTH_BACKEND_PORT=8000

# DeepInfra API for external model fallback
DEEPINFRA_API=your-deepinfra-api-key

# Perplexity API for citation finding with web search
PERPLEXITY_API=your-perplexity-api-key

# Groq API for ultra-fast inference (optional)
# Used for chat and letter generation when use_external=True
GROQ_API_KEY=your-groq-api-key
